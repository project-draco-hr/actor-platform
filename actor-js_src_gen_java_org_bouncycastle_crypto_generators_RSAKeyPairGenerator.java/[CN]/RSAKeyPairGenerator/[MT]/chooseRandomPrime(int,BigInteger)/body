{
  for (; ; ) {
    BigInteger p=param.getRandom().generateBigInteger(bitlength,1);
    if (p.mod(e).equals(ONE)) {
      continue;
    }
    if (!p.isProbablePrime(param.getCertainty())) {
      continue;
    }
    if (!e.gcd(p.subtract(ONE)).equals(ONE)) {
      continue;
    }
    return p;
  }
}
