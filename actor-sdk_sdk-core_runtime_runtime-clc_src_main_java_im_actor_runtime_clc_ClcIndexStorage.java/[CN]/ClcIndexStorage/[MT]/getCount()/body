{
  checkSqlite();
  Cursor mCount=null;
  try {
    mCount=db.rawQuery("SELECT COUNT(*) FROM \"" + name + "\""+ " WHERE \"CONTEXT\"='?'",new String[]{this.context});
    if (mCount.moveToNext()) {
      return mCount.getInt(1);
    }
  }
  finally {
    if (mCount != null) {
      mCount.close();
    }
  }
  return 0;
}
