{
  long value=0;
  long i=0;
  long b;
  do {
    if (offset == maxOffset) {
      throw new IOException();
    }
    b=data[offset++];
    if ((b & 0x80) != 0) {
      value|=(b & 0x7F) << i;
      i+=7;
      if (i > 70) {
        throw new IOException();
      }
    }
 else {
      break;
    }
  }
 while (true);
  return value | (b << i);
}
