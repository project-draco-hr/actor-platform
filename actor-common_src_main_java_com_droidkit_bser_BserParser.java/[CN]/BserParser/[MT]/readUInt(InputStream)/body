{
  long a=stream.read();
  if (a < 0) {
    throw new IOException();
  }
  long b=stream.read();
  if (b < 0) {
    throw new IOException();
  }
  long c=stream.read();
  if (c < 0) {
    throw new IOException();
  }
  long d=stream.read();
  if (d < 0) {
    throw new IOException();
  }
  return a + (b << 8) + (c << 16)+ (d << 24);
}
