{
  if (message instanceof MessageShownEvent) {
    MessageShownEvent shownEvent=(MessageShownEvent)message;
    context().getMessagesModule().getOwnReadActor().send(new OwnReadActor.MessageRead(shownEvent.getPeer(),shownEvent.getSortDate()));
    context().getMessagesModule().getConversationActor(shownEvent.getPeer()).send(new ConversationActor.MessageReadByMe(shownEvent.getSortDate()));
  }
 else {
    drop(message);
  }
}
