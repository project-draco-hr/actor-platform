{
  int halfLength=length / 2;
  byte left, right;
  for (int i=0; i < halfLength; i++) {
    left=in[inOff + i * 2];
    right=in[inOff + i * 2 + 1];
    if (left < (byte)'a') {
      out[outOff]=(byte)((left - '0') << 4);
    }
 else {
      out[outOff]=(byte)((left - 'a' + 10) << 4);
    }
    if (right < (byte)'a') {
      out[outOff]+=(byte)(right - '0');
    }
 else {
      out[outOff]+=(byte)(right - 'a' + 10);
    }
    outOff++;
  }
  return halfLength;
}
