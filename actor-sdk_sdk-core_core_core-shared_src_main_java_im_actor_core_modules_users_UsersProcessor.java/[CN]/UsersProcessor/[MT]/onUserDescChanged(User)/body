{
  context().getMessagesModule().getDialogsActor().send(new DialogsActor.UserChanged(u));
  if (context().getConfiguration().isEnabledGroupedChatList()) {
    context().getMessagesModule().getDialogsGroupedActor().send(new GroupedDialogsActor.PeerInformationChanged(Peer.user(u.getUid())));
  }
  context().getContactsModule().getContactSyncActor().send(new ContactsSyncActor.UserChanged(u));
}
