{
  if (size < 0) {
    size=0;
  }
  if (size < 1024) {
    return size + " B";
  }
 else   if (size < 1024 * 1024) {
    return size / 1024 + " KB";
  }
 else   if (size < 1024 * 1024 * 1024) {
    return size / (1024 * 1024) + " MB";
  }
 else {
    return size / (1024 * 1024 * 1024) + " GB";
  }
}
