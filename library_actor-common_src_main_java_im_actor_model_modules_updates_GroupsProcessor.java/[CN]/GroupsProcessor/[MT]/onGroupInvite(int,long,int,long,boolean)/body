{
  Group group=groups().getValue(groupId);
  if (group != null) {
    groups().addOrUpdateItem(group.changeMember(true).addMember(myUid(),inviterId,date));
    if (!isSilent) {
      if (inviterId == myUid()) {
        Message message=new Message(rid,date,date,inviterId,MessageState.UNKNOWN,ServiceGroupCreated.create());
        conversationActor(group.peer()).send(message);
      }
 else {
        Message message=new Message(rid,date,date,inviterId,MessageState.SENT,ServiceGroupUserAdded.create(myUid()));
        conversationActor(group.peer()).send(message);
      }
    }
  }
}
