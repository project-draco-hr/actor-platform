{
  Group group=groups().getValue(groupId);
  if (group != null) {
    groups().addOrUpdateItem(group.addMember(uid,adder,date));
    if (!isSilent) {
      Message message=new Message(rid,date,date,adder,adder == myUid() ? MessageState.SENT : MessageState.UNKNOWN,ServiceGroupUserAdded.create(uid));
      conversationActor(group.peer()).send(message);
    }
  }
}
