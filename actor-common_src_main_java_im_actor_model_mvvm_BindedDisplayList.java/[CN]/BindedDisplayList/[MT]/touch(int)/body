{
  MVVMEngine.checkMainThread();
  if (index >= getSize() - loadGap) {
    if (window.isForwardCompleted()) {
      if (bindHook != null) {
        bindHook.onScrolledToEnd();
      }
    }
 else {
      loadMoreForward();
    }
  }
  if (index < loadGap) {
    loadMoreBackward();
  }
  if (bindHook != null) {
    bindHook.onItemTouched(getItem(index));
  }
}
