{
  if (peer.getPeerType() == PeerType.PRIVATE && peer.getPeerId() == myUid()) {
    bind(getAvatar(),messenger().getOwnAvatarVM().getUploadState(),new DoubleValueChangedListener<Avatar,AvatarUploadState>(){
      @Override public void onChanged(      Avatar val,      ValueModel<Avatar> valueModel,      AvatarUploadState val2,      ValueModel<AvatarUploadState> valueModel2){
        performBind(val,val2);
      }
    }
);
  }
 else {
    bind(getAvatar(),new ValueChangedListener<Avatar>(){
      @Override public void onChanged(      Avatar val,      ValueModel<Avatar> valueModel){
        performBind(val,null);
      }
    }
);
  }
}
