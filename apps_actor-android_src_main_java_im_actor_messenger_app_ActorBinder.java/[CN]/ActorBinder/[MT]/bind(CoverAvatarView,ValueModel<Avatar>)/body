{
  bind(avatar,new ValueChangedListener<Avatar>(){
    @Override public void onChanged(    Avatar val,    ValueModel<Avatar> valueModel){
      if (val != null) {
        avatarView.bind(val);
      }
 else {
        avatarView.unbind();
        avatarView.setImageURI(null);
      }
    }
  }
);
}
