{
  return JsPromise.create(new JsPromiseExecutor(){
    @Override public void execute(    final JsPromiseResolve resolve,    final JsPromiseReject reject){
      messenger.editMyName(text).start(new CommandCallback<Boolean>(){
        @Override public void onResult(        Boolean res){
          resolve.execute();
        }
        @Override public void onError(        Exception e){
          reject.execute();
        }
      }
);
    }
  }
);
}
