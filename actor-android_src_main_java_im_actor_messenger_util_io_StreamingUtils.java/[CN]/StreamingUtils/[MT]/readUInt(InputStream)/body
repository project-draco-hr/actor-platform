{
  long a=stream.read();
  if (a < 0) {
    throw new IOException();
  }
  long b=stream.read();
  if (b < 0) {
    throw new IOException();
  }
  long c=stream.read();
  if (c < 0) {
    throw new IOException();
  }
  long d=stream.read();
  if (d < 0) {
    throw new IOException();
  }
  return d + (c << 8) + (b << 16)+ (a << 24);
}
