{
  byte[] res=new byte[count];
  int offset=0;
  while (offset < res.length) {
    int readed=stream.read(res,offset,res.length - offset);
    if (readed > 0) {
      offset+=readed;
    }
 else     if (readed < 0) {
      throw new IOException();
    }
 else {
      Thread.yield();
    }
  }
  return res;
}
