{
  String newString=getTemplate(senderId,baseString).replace("{name}",formatPerformerName(senderId));
  if (currentLocale.equals("Fa")) {
    if (senderId == modules.getAuthModule().myUid())     assumeLoaded();
    newString=(newString + locale.get("YouSuffixVerb")).replace("\r","");
  }
  return newString;
}
