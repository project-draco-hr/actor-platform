{
  Log.d(TAG,"Connection Lost");
  if (mqttClient != null) {
    try {
      mqttClient.disconnect();
    }
 catch (    MqttException e) {
      e.printStackTrace();
    }
    try {
      mqttClient.close();
    }
 catch (    MqttException e) {
      e.printStackTrace();
    }
  }
  this.mqttClient=null;
  tryConnect();
}
