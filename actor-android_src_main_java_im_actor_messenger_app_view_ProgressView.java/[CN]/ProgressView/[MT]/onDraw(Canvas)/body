{
  if (reverse)   start+=15;
 else   start+=5;
  if (start == 360) {
    start=1;
  }
  if (!reverse)   value-=10;
 else   value+=10;
  if (value == 0 || value == maxvalue) {
    reverse=!reverse;
  }
  transformColor();
  p.setColor(Color.argb(255,currentColor[0],currentColor[1],currentColor[2]));
  c.drawArc(rectF,start,maxvalue - value,false,p);
  invalidate();
}
