{
  bind(typing.getTyping(),new ValueChangedListener<Boolean>(){
    @Override public void onChanged(    Boolean val,    ValueModel<Boolean> valueModel){
      if (val) {
        textView.setText(messenger().getFormatter().formatTyping());
        container.setVisibility(View.VISIBLE);
        titleContainer.setVisibility(View.INVISIBLE);
      }
 else {
        container.setVisibility(View.INVISIBLE);
        titleContainer.setVisibility(View.VISIBLE);
      }
    }
  }
);
}
