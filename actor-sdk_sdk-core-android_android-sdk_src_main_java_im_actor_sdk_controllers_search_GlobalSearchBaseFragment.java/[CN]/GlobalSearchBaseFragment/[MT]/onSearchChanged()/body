{
  if (!searchDisplay.isInSearchState()) {
    showView(searchHintView);
    goneView(searchEmptyView);
  }
 else {
    goneView(searchHintView);
    if (searchDisplay.getSize() == 0 && footer.getVisibility() != View.VISIBLE) {
      showView(searchEmptyView);
    }
 else {
      goneView(searchEmptyView);
    }
  }
}
