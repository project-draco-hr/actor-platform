{
  Group group=groups().getValue(groupId);
  if (group != null) {
    groups().addOrUpdateItem(group.addMember(myUid(),inviterId,date));
    if (!isSilent) {
      if (inviterId == myUid()) {
        Message message=new Message(rid,date,date,inviterId,MessageState.UNKNOWN,ServiceGroupCreated.create());
        getRouter().onNewMessage(group.peer(),message);
      }
 else {
        Message message=new Message(rid,date,date,inviterId,MessageState.SENT,ServiceGroupUserInvited.create(myUid()));
        getRouter().onNewMessage(group.peer(),message);
      }
    }
  }
}
