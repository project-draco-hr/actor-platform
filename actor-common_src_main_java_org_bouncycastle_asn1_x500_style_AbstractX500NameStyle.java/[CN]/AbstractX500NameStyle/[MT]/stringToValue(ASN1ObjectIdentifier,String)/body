{
  if (value.length() != 0 && value.charAt(0) == '#') {
    try {
      return IETFUtils.valueFromHexString(value,1);
    }
 catch (    IOException e) {
      throw new RuntimeException("can't recode value for oid " + oid.getId());
    }
  }
  if (value.length() != 0 && value.charAt(0) == '\\') {
    value=value.substring(1);
  }
  return encodeStringValue(oid,value);
}
