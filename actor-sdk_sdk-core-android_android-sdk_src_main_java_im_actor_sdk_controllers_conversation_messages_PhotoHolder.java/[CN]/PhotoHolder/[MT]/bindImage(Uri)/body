{
  ImageRequest request=ImageRequestBuilder.newBuilderWithSource(uri).setResizeOptions(new ResizeOptions(previewView.getLayoutParams().width,previewView.getLayoutParams().height)).build();
  PipelineDraweeController controller=(PipelineDraweeController)Fresco.newDraweeControllerBuilder().setOldController(previewView.getController()).setImageRequest(request).setAutoPlayAnimations(true).build();
  previewView.setController(controller);
}
