{
  long readState=modules().getMessagesModule().loadReadState(peer);
  if (sortingDate <= readState) {
    return;
  }
  modules().getMessagesModule().getPlainReadActor().send(new CursorReaderActor.MarkRead(peer,sortingDate));
  modules().getMessagesModule().getConversationActor(peer).send(new ConversationActor.MessageReadByMe(sortingDate));
  modules().getMessagesModule().saveReadState(peer,sortingDate);
  modules().getNotifications().onOwnRead(peer,sortingDate);
}
