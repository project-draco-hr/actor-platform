{
  final String text=messageBody.getText().toString().trim();
  messageBody.setText("");
  if (text.length() == 0) {
    return;
  }
  if (getResources().getDisplayMetrics().heightPixels <= getResources().getDisplayMetrics().widthPixels) {
    keyboardUtils.setImeVisibility(messageBody,false);
  }
  messages.sendMessage(peer,new TextContent(text));
}
