{
  if (actionMode != null) {
    if (!selected.containsKey(messageModel.getRid())) {
      selected.put(messageModel.getRid(),messageModel);
    }
 else {
      selected.remove(messageModel.getRid());
    }
    actionMode.invalidate();
    if (selected.size() == 0) {
      if (actionMode != null) {
        actionMode.finish();
        actionMode=null;
      }
    }
    return true;
  }
  return false;
}
