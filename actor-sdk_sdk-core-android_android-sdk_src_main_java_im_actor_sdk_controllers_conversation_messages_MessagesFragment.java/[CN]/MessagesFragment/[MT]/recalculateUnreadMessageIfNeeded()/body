{
  Log.d("READ_DEBUG","trying to scroll to unread");
  if (!isPrimaryMode) {
    return;
  }
  BindedDisplayList<Message> list=getDisplayList();
  if (firstUnread == -1) {
    firstUnread=conversationVM.getLastMessageDate();
  }
  if (isUnreadLoaded) {
    return;
  }
  if (list.getSize() == 0) {
    return;
  }
  if (getDisplayList().getItem(0).getSortDate() < firstUnread) {
    getDisplayList().initCenter(firstUnread,true);
    return;
  }
  isUnreadLoaded=true;
  if (firstUnread <= 0) {
    return;
  }
  int index=-1;
  long unread=-1;
  for (int i=list.getSize() - 1; i >= 0; i--) {
    Message message=list.getItem(i);
    if (message.getSenderId() == messenger().myUid()) {
      continue;
    }
    if (message.getSortDate() > firstUnread) {
      index=i;
      unread=message.getRid();
      break;
    }
  }
  if (index >= 0) {
    scrollToUnread(unread,index);
  }
 else {
    scrollToUnread(0,0);
  }
}
