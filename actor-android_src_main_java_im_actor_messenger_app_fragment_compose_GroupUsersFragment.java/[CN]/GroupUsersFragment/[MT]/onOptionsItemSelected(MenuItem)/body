{
  if (item.getItemId() == R.id.done) {
    ask(GroupsActor.groupUpdates().createGroup(title,BoxUtil.unbox(selectedUsers.toArray(new Integer[0]))),new UiAskCallback<Integer>(){
      @Override public void onPreStart(){
        isInProgress=true;
        getActivity().invalidateOptionsMenu();
        showView(progressView);
      }
      @Override public void onCompleted(      Integer res){
        if (avatarPath != null) {
          GroupAvatarActor.get().changeAvatar(res,avatarPath);
        }
        getActivity().startActivity(Intents.openGroupDialog(res,true,getActivity()));
        getActivity().finish();
      }
      @Override public void onError(      Throwable t){
        isInProgress=false;
        getActivity().invalidateOptionsMenu();
        goneView(progressView);
      }
    }
);
    return true;
  }
  return super.onOptionsItemSelected(item);
}
